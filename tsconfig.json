{
  "compilerOptions": {
    "target": "es2019",      
    "lib": ["es2019"],                            
    "module": "commonjs",   
    "moduleResolution": "node",                           
    "rootDir": "src/", 
    "rootDirs": [
      "src",
    ],
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true, 
    "sourceMap": true                     
  },
  "exclude": [
    "node_modules", 
    "**/*.spec.ts", 
    "jest.config.ts", 
    "dist"]
  
}
